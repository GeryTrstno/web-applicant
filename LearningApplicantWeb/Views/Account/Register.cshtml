@model LearningApplicantWeb.Models.AccountVM.RegisterViewModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Register";
}

<div class="col-md-8 col-lg-6 col-xl-5">
    <div class="card mt-4">
        <div class="card-body p-4">
            <div class="text-center mt-2">
                <h5 class="text-primary">Buat Akun Baru</h5>
                <p class="text-muted">Dapatkan akun gratis Anda sekarang.</p>
            </div>
            <div class="p-2 mt-4">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="Masukkan username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Masukkan password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Konfirmasi password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-success w-100" type="submit">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="mt-4 text-center">
        <p class="mb-0">Sudah punya akun ? <a asp-action="Login" class="fw-semibold text-primary text-decoration-underline"> Login </a> </p>
    </div>
</div>
