@model LearningApplicantWeb.Models.RoleVM.Update

<form id="updateForm">
    <div class="form-group">
        <label asp-for="RoleId" class="form-label">Role ID</label>
        @* --- PERBAIKAN 1: Gunakan asp-for="RoleId" --- *@
        <input asp-for="RoleId" class="form-control" readonly />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Name" class="form-label">Nama Role</label>
        <input asp-for="Name" class="form-control" placeholder="Masukkan Nama Role" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Update</button>
</form>

<script>
    $(document).ready(function() {
        $('#updateForm').on('submit', function(e) {
            e.preventDefault();

            // --- PERBAIKAN 2: Sesuaikan nama properti dan selector ---
            var formData = {
                RoleId: $('input[name="RoleId"]').val(),
                Name: $('input[name="Name"]').val()
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("SubmitUpdate", "Role")',
                data: formData,
                // ... sisa script Anda sama ...
                success: function(response) {
                    if (response.status) {
                        $("#staticBackdropLargeScrollable").modal('hide');
                        Swal.fire({
                            icon: 'success',
                            title: 'Berhasil',
                            text: response.message
                        }).then(function() {
                            window.location.href = '@Url.Action("Index", "Role")';
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
            });
        });
    });
</script>
