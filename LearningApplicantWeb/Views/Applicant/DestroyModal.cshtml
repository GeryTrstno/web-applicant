<div class="modal fade" id="destroyModal" tabindex="-1" aria-labelledby="destroyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="destroyModalLabel">Konfirmasi Hapus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="destroyForm" asp-action="Destroy" asp-controller="Applicant" method="post">
                <div class="modal-body">
                    <p>Apakah Anda yakin ingin menghapus data pelamar ini?</p>
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="applicantIdToDelete" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                </div>
            </form>
        </div>
    </div>
</div>