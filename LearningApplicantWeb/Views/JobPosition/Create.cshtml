@model LearningApplicantWeb.Models.JobPositionVM.Add

<form id="createForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="PositionId" class="form-label"></label>
        <input asp-for="PositionId" class="form-control" />
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PositionName" class="form-label"></label>
        <input asp-for="PositionName" class="form-control" />
        <span asp-validation-for="PositionName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Simpan</button>
</form>

<script>
    $('#createForm').on('submit', function (e) {
        e.preventDefault();
        var data = $(this).serialize();
        $.ajax({
            url: '@Url.Action("Submit")',
            type: 'POST',
            data: data,
            success: function (response) {
                if (response.status) {
                    $("#staticBackdropLargeScrollable").modal('hide');
                    Swal.fire('Berhasil!', response.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire('Gagal!', response.message, 'error');
                }
            }
        });
    });
</script>
